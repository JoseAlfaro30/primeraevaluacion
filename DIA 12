#Pide una palabra y te devuelve sus letras 
def deletreo():
    palabra=input("Dime una palabra: ")
    seguir=True
    cont=0
    while(seguir==True):
        if(palabra[cont]!='\0'):
            print(palabra[cont]+' ')
            cont=cont+1
        else:
            seguir=False
deletreo() 

def deletreo():
    palabra=input("Dime una palabra: ")
    for cont in range (0,len(palabra)):
        print(palabra[cont]+' ')
    print("Tiene"+str(cont+1)+" letras")    
        
deletreo()       

# Pide una palabra y te devuelve sus letras y su longitud. Me dice cu√°ntas vocales tiene
def esVocal(letra):
    respuesta=False
    if(letra=='a' or letra=='e' or letra=='i' or letra=='o' or letra=='u'):
        respuesta=True
    return(respuesta)

def deletreo():
    palabra=input("Dime una palabra: ")
    cuentavocales=0
    for cont in range(0,len(palabra)):
        print(palabra[cont]+ ' ')
        if(esVocal(palabra[cont])==True):
            cuentavocales=cuentavocales+1
    print("Tiene "+str(cuentavocales) +" vocales")

deletreo()

